<div class="container">
    <div class="newsletter">
        <h2 class="h2">Create the new blog</h2>
        <form method="POST" action="/blogs/store">
            <div class="wrapper">
                <p for="name">Name</p>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="wrapper">
                <p for="content" class="form-label">Content</p>
                <textarea type="text" class="form-control" id="content" name="content" rows="4"></textarea>
            </div>
            <div class="wrapper">
                <p for="tag" class="form-label">Tag</p>
                <input type="text" class="form-control" id="tag" name="tag">
            </div>
            <div class="wrapper">
                <p for="img" class="form-label">Image Blog Link</p>
                <input type="text" class="form-control" id="img" name="img">
            </div>
            <div class="wrapper">
                <p for="author_img" class="form-label">Author Image Link</p>
                <input type="text" class="form-control" id="author_img" name="author_img">
            </div>
            <div class="wrapper">
                <p for="author_name" class="form-label">Author Name</p>
                <input type="text" class="form-control" id="author_name" name="author_name">
            </div>
            <div class="justify-content-end">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>

        </form>
    </div>
</div>